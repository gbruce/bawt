{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Program",
      "type": "node",
      "request": "launch",
      "args": ["${workspaceRoot}/src/apps/index.ts"],
      "runtimeArgs": ["--nolazy", "-r", "ts-node/register", "-r", "tsconfig-paths/register"],
      "sourceMaps": true,
      "cwd": "${workspaceRoot}",
      "protocol": "inspector",
      "console": "internalConsole",
      "outputCapture": "std",
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "name": "Run tests",
      "type": "node",
      "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/mocha",
      "request": "launch",
      "args": ["${workspaceRoot}/src/lib/characters/tests/Handler.spec.ts"],
      "runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
      "sourceMaps": true,
      "cwd": "${workspaceRoot}",
      "protocol": "inspector",
      "console": "internalConsole",
      "outputCapture": "std"
    },
    {
      "name": "Launch File Serve",
      "type": "node",
      "request": "launch",
      "args": ["${workspaceRoot}/src/apps/bawt-files/index.ts"],
      "runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
      "sourceMaps": true,
      "cwd": "${workspaceRoot}",
      "protocol": "inspector",
      "console": "internalConsole",
      "outputCapture": "std"
    },
    {
      "name": "Launch Asset Browser",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:9000/",
      "webRoot": "${workspaceFolder}"
    },
    {
      "name": "Attach Asset Browser",
      "type": "chrome",
      "request": "attach",
      "port": "9222",
      "webRoot": "${workspaceFolder}"
    },
    {
      "name": "Launch WebVR",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:8000/webvr.html",
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true,
    },
  ]
}
